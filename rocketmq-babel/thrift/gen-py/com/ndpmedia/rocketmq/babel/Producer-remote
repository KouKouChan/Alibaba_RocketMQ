import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import TSSLSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

from com.ndpmedia.rocketmq.babel import Producer
from com.ndpmedia.rocketmq.babel.ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print('')
  print('Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] [-s[sl]] function [arg1 [arg2...]]')
  print('')
  print('Functions:')
  print('  string send(Message message)')
  print('   batchSend( messageList)')
  print('  void stop()')
  print('')
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
clientSocketOverTLS = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

if sys.argv[argi] == '-s' or sys.argv[argi] == '-clientSocketOverTLS':
  clientSocketOverTLS = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSSLSocket.TSSLSocket(host, port, validate=False) if clientSocketOverTLS else TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Producer.Client(protocol)
transport.open()

if cmd == 'send':
  if len(args) != 1:
    print('send requires 1 args')
    sys.exit(1)
  pp.pprint(client.send(eval(args[0]),))

elif cmd == 'batchSend':
  if len(args) != 1:
    print('batchSend requires 1 args')
    sys.exit(1)
  pp.pprint(client.batchSend(eval(args[0]),))

elif cmd == 'stop':
  if len(args) != 0:
    print('stop requires 0 args')
    sys.exit(1)
  pp.pprint(client.stop())

else:
  print('Unrecognized method %s' % cmd)
  sys.exit(1)

transport.close()
